@import 'color.styl'

.page-container
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  overflow hidden

  .list-page-container {
    position relative
    height 100%
    overflow auto
  }

  .share-link
    display block
    overflow hidden
    position absolute
    top 0

    .share-pic
      width 100%

  .close-btn
    position absolute
    top 10px
    right 20px
    z-index 2

  .list-page
    background-color #E00024
    padding-bottom 100px
    transition top 1.5s ease-in-out 0s
    -webkit-transition top 1.5s ease-in-out 0s
    position relative
    z-index 3
    top 0
    
    .poster-container
      position relative
    
    .list-poster
      width 100%
      display block
      
  .signup-count
    position absolute
    top 68%
    left 56%
    font-size 1.8em
    color #FD0D31
    font-weight 900
    font-family Impact, Charcoal, sans-serif
    
    .count
      margin 0 3px
    
  ul.list
    padding 10px
    .price-title
      display block
      margin 10px auto
      height 40px
    
    .item
      position relative 
      margin-bottom 10px
      background-color #FFF
      > a
        color #666
        display block
      .left
        padding 0
        width 40%
        position relative
        .price-logo
          display block
          position absolute
          width 40%
          height 17%
          top 8px
          left 8px
        .mailing-fee
          position absolute
          bottom 15px
          right 15px
          width 33%
        .avatar
          width 100%
          display block
          min-height 100px
          border 1px solid transparent
      .right
        top 0
        left 40%
        right 0
        padding 10px
        height 100%
        position absolute

        .title
          margin 0
          font-size 1.4rem
          display -webkit-box
          overflow hidden
          text-overflow ellipsis
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        .price
          color #F00
          font-size 2rem
          font-weight 900
          margin-right 1rem
      
      .item-status
        position relative

        .status-bar
          display inline-block

        .notice 
          position absolute
          right 0
          bottom 5px
          
@media (min-width: 980px)
  .page-container .signup-count
    font-size 6rem
    
@media (min-width: 1200px)
  .page-container .signup-count
    font-size 8rem
    
@media (max-width: 960px)
  .page-container .signup-count
    font-size 5rem

@media(max-width: 750px)
  .page-container .signup-count
    font-size 4rem        
 
@media(max-width: 640px)
  .page-container .signup-count
    font-size 2.5rem
    
@media(max-width: 320px)
  .page-container .signup-count
    font-size 2rem
    
    
